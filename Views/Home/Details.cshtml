@model RestorauntMenu.Data.Models.Dish
@{
    ViewBag.Title = Model.Title;
}

<h2>Блюдо: "@Model.Title"</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.Id</dd>

        <dt>Описание</dt>
        <dd>@Model.Description</dd>

        <dt>Дата создания</dt>
        <dd>@Model.CreationDate</dd>
    </dl>
    <form asp-controller="Home" asp-action="Details" method="post">
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Вернуться" />
        </div>
    </form>

</div>