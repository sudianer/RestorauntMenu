@model RestorauntMenu.Data.Models.Dish
@{ 
    ViewBag.Title = "Редактирование блюда";
}

    <form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Название</label>
            <input type="text" asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Описание</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Ingredients" class="control-label">Состав</label>
            <input type="text" asp-for="Ingredients" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </form>