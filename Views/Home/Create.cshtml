@model RestorauntMenu.Data.Models.Dish
@{
    ViewBag.Title = "Создание блюда";
}

<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название</label>
        <input type="text" asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ingredients" class="control-label">Состав</label>
        <input type="text" asp-for="Ingredients" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Стоимость</label>
        <input type="text" asp-format="decimal" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TimeToMake" class="control-label">Время приготовления</label>
        <input type="text" asp-for="TimeToMake" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>